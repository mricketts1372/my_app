<!-- Validation failure messages -->

<% if @interlevel.errors.any? %>
  <% @interlevel.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Interlevel #<%= @interlevel.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_interlevel/<%= @interlevel.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for question -->
          <div class="form-group">
            <label for="question" class="col-sm-2 control-label">
              Question
            </label>
            <div class="col-sm-10">
              <textarea id="question" name="question" placeholder="Question" class="form-control" rows="3"><%= @interlevel.question %></textarea>
            </div>
          </div>

          <!-- Label and input for answer -->
          <div class="form-group">
            <label for="answer" class="col-sm-2 control-label">
              Answer
            </label>
            <div class="col-sm-10">
              <textarea id="answer" name="answer" placeholder="Answer" class="form-control" rows="3"><%= @interlevel.answer %></textarea>
            </div>
          </div>

          <!-- Label and input for point -->
          <div class="form-group">
            <label for="point" class="col-sm-2 control-label">
              Point
            </label>
            <div class="col-sm-10">
              <input type="text" id="point" name="point" placeholder="Point" class="form-control" value="<%= @interlevel.point %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Interlevel
              </button>
              or
              <a href="/interlevels/<%= @interlevel.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
