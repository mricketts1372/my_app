<!-- Validation failure messages -->

<% if @player.errors.any? %>
  <% @player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Player</h3>
      </div>
      <div class="panel-body">
        <form action="/create_player" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for rank -->
          <div class="form-group">
            <label for="rank" class="col-sm-2 control-label">
              Rank
            </label>
            <div class="col-sm-10">
              <input type="text" id="rank" name="rank" placeholder="Rank" class="form-control" value="<%= @player.rank %>">
            </div>
          </div>

          <!-- Label and input for scoreboard -->
          <div class="form-group">
            <label for="scoreboard" class="col-sm-2 control-label">
              Scoreboard
            </label>
            <div class="col-sm-10">
              <input type="text" id="scoreboard" name="scoreboard" placeholder="Scoreboard" class="form-control" value="<%= @player.scoreboard %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Player
              </button>
              or
              <a href="/players">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
